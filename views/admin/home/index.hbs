{{>header}}
<title>Cental - Car Rent | Admin Section</title>
{{>navbar}}

{{>hero}}
<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
            {{>sidebar}}
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-6">
                    {{#if data.pic}}
                    <img src="{{data.pic}}" height="400px" width="100%" alt="Admin Image">
                    {{else}}
                    <img src="/img/noimage.png" height="400px" width="100%" alt="Admin Image">
                    {{/if}}
                </div>
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <th>{{data.name}}</th>
                            </tr>
                            <tr>
                                <th>User Name</th>
                                <th>{{data.username}}</th>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <th>{{data.email}}</th>
                            </tr>
                            <tr>
                                <th>Phone</th>
                                <th>{{data.phone}}</th>
                            </tr>
                            <tr>
                                <th>Role</th>
                                <th>{{data.role}}</th>
                            </tr>
                            <tr>
                                <th colspan="2"><a href="/admin/update-profile" class="btn btn-primary w-100">Update
                                        Profile</a></th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


{{>footer}}